<header class="page-header">
  <h1>Sign up!</h1>
</header>

<%= form_for :user, url: '/users' do |f| %>
  <form class="form-horizontal">
    <p>
      <label class="control-label col-sm-3" for="name">Name: </label><%= f.text_field :name %>
    </p>
    <p>
      <label class="control-label col-sm-3" for="email">Email: </label><%= f.text_field :email %>
    </p>
    <p>
      <label class="control-label col-sm-3" for="pass">Password: </label><%= f.password_field :password %>
    </p>
    <p>
      <label class="control-label col-sm-3" for="pass">Confirm Password: </label><%= f.password_field :password_confirmation %>
    </p>

    <%= f.submit "Submit", class: "btn btn-primary" %>
  </form>
<% end %>
